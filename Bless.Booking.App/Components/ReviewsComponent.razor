<!-- Desktop Grid -->
<div class="row justify-content-center gap-4 d-none d-md-flex">
    @foreach (var review in reviews)
    {
        <div class="col-md-3 bg-white rounded shadow p-4 text-center">
            @* Imagen de perfil *@
            @if (!string.IsNullOrWhiteSpace(review.profile_photo_url))
            {
                <img src="@review.profile_photo_url" class="rounded-circle mb-3" width="70" height="70" alt="@review.author_name" onerror="this.style.display='none';" />
            }
            else
            {
                <img src="/img/default-user.png" class="rounded-circle mb-3" width="70" height="70" alt="Usuario sin imagen" />
            }

            <p class="text-muted">@review.Text</p>

            <div class="text-warning mb-2">
                @for (int i = 0; i < review.rating; i++)
                {
                    <span>★</span>
                }
                @for (int i = review.rating; i < 5; i++)
                {
                    <span class="text-secondary">★</span>
                }
            </div>

            <strong>@review.author_name</strong><br />
            <small class="text-muted">@review.TimeAsDateTime.ToString("dd/MM/yyyy")</small>
        </div>
    }
</div>

<!-- Mobile Carousel -->
<div id="reviewsCarousel" class="carousel slide d-md-none" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < reviews.Count; i++)
        {
            var review = reviews[i];
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <div class="bg-white rounded shadow p-4 mx-3 text-center">
                    @if (!string.IsNullOrWhiteSpace(review.profile_photo_url))
                    {
                        <img src="@review.profile_photo_url" class="rounded-circle mb-3" width="70" height="70" alt="@review.author_name" onerror="this.style.display='none';" />
                    }
                    else
                    {
                        <img src="/img/default-user.png" class="rounded-circle mb-3" width="70" height="70" alt="Usuario sin imagen" />
                    }

                    <p class="text-muted">@review.Text</p>

                    <div class="text-warning mb-2">
                        @for (int j = 0; j < review.rating; j++)
                        {
                            <span>★</span>
                        }
                        @for (int j = review.rating; j < 5; j++)
                        {
                            <span class="text-secondary">★</span>
                        }
                    </div>

                    <strong>@review.author_name</strong><br />
                    <small class="text-muted">@review.TimeAsDateTime.ToString("dd/MM/yyyy")</small>
                </div>
            </div>
        }
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#reviewsCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#reviewsCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>
