@page "/"
@rendermode InteractiveServer
@using Bless.Booking.App.Components


<div class="home-hero row m-0 align-items-end justify-content-between">
    <!-- Contenido de texto -->
    <div class="hero-text col-12 col-md-6 @(animacionActivada ? "animate-fadein-left" : "") pb-5 ps-md-5">
        <img src="/img/bless-logo.png" alt="Logo Bless Barber Shop" class="mb-4 logo-bless" />

        <p class="text-white mb-2">Bienvenido a Bless Barber Shop</p>
        <h1 class="display-5 fw-bold mb-4 text-white">
            La mejor barbería para un<br />look profesional
        </h1>
        <p class="text-muted mb-4" style="max-width: 450px;">
            Bless ofrece tratamientos personalizados de alto rendimiento para brindarte resultados visibles.
        </p>

        <div class="d-flex flex-column flex-md-row gap-3">
            <button class="btn btn-outline-light px-5 py-3 fs-5 w-100 w-md-auto" @onclick="() => mostrarModal = true">
                Reservar ahora
            </button>
            <button class="btn btn-outline-secondary px-5 py-3 fs-5 w-100 w-md-auto" onclick="document.getElementById('servicios').scrollIntoView({ behavior: 'smooth' });">
                Todos los servicios
            </button>
        </div>

    </div>

    <!-- Contenido de imagen -->
    <div class="hero-image col-md-6 d-none d-md-block" style="padding-right: 0; margin-right: 0;">
        <img src="/img/fondo-barbero.png" alt="Cliente recibiendo corte"
             class="img-fluid barber-img" style="display: block; margin-left: auto;" />
    </div>
</div>

<section class="about-section d-flex align-items-center bg-white px-4">
    <div class="container d-flex flex-column flex-md-row align-items-center justify-content-between w-100">
        <!-- Galería estilo collage -->
        <div class="image-collage">
            <!-- Fila de dos imágenes pequeñas -->
            <div class="collage-row">
                <img src="/img/barba-barbero.jpg" class="collage-img-small" alt="Corte 1" />
                <img src="/img/raya-barbero.jpg" class="collage-img-small" alt="Corte 2" />
            </div>

            <!-- Imagen grande debajo -->
            <img src="/img/cara-barbero.jpg" class="collage-img-large" alt="Corte 3" />
        </div>



        <!-- Texto -->
        <div class="text-content text-md-start text-center ms-md-5 ps-md-3">
            <p class="text-uppercase text-secondary fw-semibold fs-6 mb-2">Sobre nosotros</p>
            <h2 class="fw-bold text-dark display-4 mb-4">La mejor barbería para hombres</h2>
            <p class="text-muted fs-5 mb-4">
                Nuestros barberos hacen un trabajo increíble. Recorta tu cabello al estilo que deseas.
                Reserva una cita con nosotros y luce como nunca antes.
            </p>
            <button class="btn btn-dark text-white px-5 py-3 fw-semibold leer-mas-btn">Leer más</button>
        </div>
    </div>
</section>

<section id="contacto" class="booking-section d-flex align-items-center text-white">
    <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center w-100">
        <!-- Texto principal -->
        <div class="booking-text text-center text-md-start mb-4 mb-md-0">
            <p class="text-uppercase text-white-50 fw-medium mb-2">Reserva ahora</p>
            <h2 class="display-5 fw-bold mb-3">Reserva tu cita<br />en línea</h2>
            <p class="text-light mb-4">
                Obtén un 10% de descuento en tu primer corte reservando a través de nuestro sitio web.
            </p>
            <button class="btn btn-outline-light px-4 py-2 fw-semibold" @onclick="() => mostrarModal = true">Reservar ahora</button>
        </div>

        <!-- Caja de llamada -->
        <div class="call-box bg-white text-center shadow-sm p-4 rounded">
            <div class="icon-container mb-3">
                <i class="bi bi-telephone-fill text-dark fs-1"></i> <!-- o puedes usar una imagen o SVG -->
            </div>
            <p class="text-muted fw-semibold mb-1">Llámanos ahora</p>
            <h4 class="fw-bold text-dark mb-0">+505 7746 7334</h4>
        </div>
    </div>
</section>

<section class="working-review-section py-5 bg-light text-dark px-4">
    <div class="container">
        <!-- Horario + imagen -->
        <div class="row align-items-center mb-5">
            <div class="col-md-6 mb-4 mb-md-0">
                <div class="col-12 col-md-6 d-flex justify-content-center">
                    <img src="/img/barberoTrabajando.jpg"
                         alt="Barbero trabajando"
                         class="img-fluid rounded shadow w-100"
                         style="max-width: 700px;" />
                </div>
            </div>
            <div class="col-md-6 bg-dark text-white p-4 rounded">
                <h4 class="fw-bold">DÍAS DE ATENCIÓN</h4>
                <p class="mb-4 text-white-50">Abrimos siete días a la semana para brindarte el mejor servicio.</p>
                <div class="d-flex justify-content-between border-bottom pb-2 mb-2">
                    <span class="fw-semibold">Lunes a Sabados</span>
                    <span>9:00 AM - 1:00 PM<br />2:00 PM - 7:00 PM </span>
                </div>
                <div class="d-flex justify-content-between border-bottom pb-2 mb-4">
                    <span class="fw-semibold">Domingo</span>
                    <span>9:30 AM - 3:00 PM</span>
                </div>
                <button class="btn btn-outline-light px-4 py-2 fw-semibold" @onclick="() => mostrarModal = true">Reservar ahora</button>
            </div>
        </div>

        <!-- Testimonios -->
        <div class="text-center mb-5">
            <p class="text-secondary text-uppercase mb-2">Testimonios</p>
            <h2 class="fw-bold">Lo que nuestros clientes dicen</h2>
            <p class="text-muted mx-auto" style="max-width: 600px;">
                Nuestros barberos hacen un trabajo increíble. Reserva tu cita y disfruta de una experiencia personalizada.
            </p>
        </div>
        <ReviewsComponent></ReviewsComponent>
    </div>
</section>

<section id="servicios" class="services-section py-5 bg-light text-dark px-4">
    <div class="container text-center mb-5">
        <p class="text-secondary text-uppercase mb-2">Nuestros Servicios</p>
        <h2 class="fw-bold fs-1">Cortes de Cabello Populares<br />y Servicios de Barbería</h2>
    </div>

    <!-- Categorías de servicios -->
    <div class="container mb-5">
        <div class="row justify-content-center text-center g-3">
            <div class="col-6 col-md-2">
                <div class="service-box p-3 rounded shadow-sm bg-white h-100">
                    <i class="bi bi-scissors fs-2 mb-2"></i>
                    <p class="fw-semibold mb-0">Corte Moderno</p>
                </div>
            </div>
            <div class="col-6 col-md-2">
                <div class="service-box p-3 rounded shadow-sm bg-white h-100">
                    <i class="bi bi-droplet fs-2 mb-2"></i>
                    <p class="fw-semibold mb-0">Lavado</p>
                </div>
            </div>
            <div class="col-6 col-md-2">
                <div class="service-box p-3 rounded shadow-sm bg-white h-100">
                    <i class="bi bi-palette fs-2 mb-2"></i>
                    <p class="fw-semibold mb-0">Color</p>
                </div>
            </div>
            <div class="col-6 col-md-2">
                <div class="service-box p-3 rounded shadow-sm bg-dark text-white h-100">
                    <i class="bi bi-person fs-2 mb-2"></i>
                    <p class="fw-semibold mb-0">Recorte Facial</p>
                </div>
            </div>
            <div class="col-6 col-md-2">
                <div class="service-box p-3 rounded shadow-sm bg-white h-100">
                    <i class="bi bi-scissors fs-2 mb-2"></i>
                    <p class="fw-semibold mb-0">Afeitado</p>
                </div>
            </div>
            <div class="col-6 col-md-2">
                <div class="service-box p-3 rounded shadow-sm bg-white h-100">
                    <i class="bi bi-emoji-smile fs-2 mb-2"></i>
                    <p class="fw-semibold mb-0">Masaje</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Detalle de servicio destacado -->
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-md-6">
                <img src="/img/cara-barbero.jpg" class="img-fluid rounded shadow" alt="Recorte Facial" />
            </div>
            <div class="col-md-6">
                <h3 class="fw-bold mb-3">Recorte Facial Profesional en Casa</h3>
                <p class="text-muted">
                    Disfruta de un tratamiento facial de alta calidad en la comodidad de tu hogar. Nuestro equipo te brinda precisión y detalle con cada corte.
                </p>
                <ul class="list-unstyled mb-4">
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-dark me-2"></i>Fácil de reservar en línea</li>
                    <li><i class="bi bi-check-circle-fill text-dark me-2"></i>100% satisfacción garantizada</li>
                </ul>
                <button class="btn btn-dark px-4 py-2 fw-semibold" @onclick="() => mostrarModal = true" >Reservar ahora</button>
            </div>
        </div>
    </div>
</section>

<AgendarCitaComponent @key="mostrarModal" Visible="@mostrarModal" OnClose="CerrarModal" />
